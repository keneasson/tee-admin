# TEE Admin Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================
# AWS Configuration (Required for DynamoDB)
# =============================================
AWS_REGION=ca-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# =============================================
# DynamoDB Configuration
# =============================================
# Single production database - no stage prefix
# Tables: tee-admin, tee-schedules, tee-sync-status
# (STAGE variable no longer used)

# =============================================
# Authentication (NextAuth.js)
# =============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_SECRET=your_auth_secret_here
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_URL_INTERNAL=http://localhost:3000

# Google OAuth (for Google sign-in)
GOOGLE_ID=your_google_oauth_client_id
GOOGLE_SECRET=your_google_oauth_client_secret

# =============================================
# Google Service Account (for Sheets API)
# =============================================
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----"

# Google Sheets IDs (Production Sheets)
MEMORIAL_SHEET_ID=your_memorial_sheet_id
BIBLE_CLASS_SHEET_ID=your_bible_class_sheet_id
SUNDAY_SCHOOL_SHEET_ID=your_sunday_school_sheet_id
DIRECTORY_SHEET_ID=your_directory_sheet_id
EVENTS_SHEET_ID=your_events_sheet_id
SCHEDULE_SHEET_ID=your_schedule_sheet_id

# Test Sync Sheet (for development/testing)
TEST_SYNC_SHEET_ID=1ffB9-VWxaTQudAskm_m9vP2bbaFwA5l_tkGimTkzXAw

# =============================================
# Email Configuration (AWS SES)
# =============================================
# Uses same AWS credentials as DynamoDB

# =============================================
# Admin Configuration
# =============================================
# Comma-separated list of owner email addresses
OWNER_EMAILS=admin@example.com,owner@example.com

# =============================================
# Webhook Configuration (REQUIRED for Google Sheets sync)
# =============================================
# This secret must match the value in your Google Apps Script
# Used to validate webhook requests from Google Sheets
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=your_webhook_secret_here_use_openssl_rand_hex_32

# =============================================
# Development/Debug Options
# =============================================
NODE_ENV=development
DEBUG=false

# =============================================
# Public Environment Variables
# =============================================
# These are exposed to the browser (Next.js convention)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=
NEXT_PUBLIC_ENABLE_DYNAMODB=true
NEXT_PUBLIC_DISABLE_GOOGLE_SHEETS=false

# =============================================
# Optional/Legacy Variables
# =============================================
# JWT_SECRET (deprecated - use AUTH_SECRET)
# DYNAMODB_TABLE_NAME (deprecated - now using multiple tables)
# AUTH_URL (deprecated - use NEXTAUTH_URL)